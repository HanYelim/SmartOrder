<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.yelimhan.smartorder">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECORD_AUDIO" />

    <application
        android:name=".helper.SampleApp"
        android:largeHeap="true"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        android:usesCleartextTraffic="true">
        <activity android:name=".activity.VoiceActivity" />
        <activity android:name=".activity.SpeechActivity" />
        <activity android:name=".activity.MainActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".activity.SelectActivity" />
        <activity android:name=".activity.ChooseTypeActivity" />
        <activity android:name=".activity.ChooseSizeActivity" />
        <activity android:name=".activity.OptionActivity" />
        <activity android:name=".activity.SubmitActivity" />
        <activity android:name=".activity.OptionVoiceActivity" />
        <activity android:name=".persongroupmanagment.PersonActivity" />
        <activity android:name=".persongroupmanagment.SelectImageActivity" />
        <activity android:name=".persongroupmanagment.AddFaceToPersonActivity" />
        <activity android:name=".persongroupmanagment.PersonGroupActivity" >
        </activity>
        <activity android:name=".persongroupmanagment.PersonGroupListActivity">
        </activity>
    </application>

</manifest>