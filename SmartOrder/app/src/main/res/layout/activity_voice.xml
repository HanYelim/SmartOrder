<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#d6d5d4"
    android:orientation="horizontal"
    tools:context=".activity.VoiceActivity">

    <LinearLayout
        android:layout_width="0dp"
        android:background="@drawable/round"
        android:layout_weight="1"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:weightSum="5">
        <TextView
                    android:fontFamily="@font/gyeonggilight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv"
            android:gravity="center"
            android:layout_weight="0.8"
            android:text="원하시는 메뉴를 말해주세요"
            android:textSize="25sp"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="3"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="2"
                android:layout_height="match_parent"
                android:paddingBottom="25dp"
                android:gravity="center"
                android:id="@+id/imgLayout">

                <ImageView
                    android:layout_width="130dp"
                    android:layout_height="match_parent"
                    android:id="@+id/image_menu"
                    android:src="@drawable/no_menu"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1.5"
                android:layout_height="wrap_content"
                android:gravity="left"
                android:id="@+id/text_linear"
                android:visibility="gone"
                android:layout_gravity="center"
                android:orientation="vertical">
                <TextView
                    android:fontFamily="@font/gyeonggilight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_count"
                    android:text="아아"
                    android:textSize="15sp"/>
                <TextView
                    android:fontFamily="@font/gyeonggilight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_temp"
                    android:textSize="15sp"/>
                <TextView
                    android:fontFamily="@font/gyeonggilight"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/text_size"
                    android:textSize="15sp"/>
            </LinearLayout>

        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <Button
            android:fontFamily="@font/gyeonggilight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round"
            android:layout_gravity="center"
            android:text="처음부터 말하기"
            android:id="@+id/button"/>

        <Button
            android:fontFamily="@font/gyeonggilight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/round"
            android:id="@+id/re_button"
            android:text="다시 말하기"/>
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="2"
        android:background="@drawable/round"
        android:layout_marginLeft="13dp"
        android:layout_marginRight="13dp"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <GridView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/grid_all_menu"
            android:columnWidth="125dp"
            android:padding="10dp"
            android:horizontalSpacing="10dp"
            android:verticalSpacing="10dp"
            android:numColumns="auto_fit"
            android:layout_gravity="center">

        </GridView>

    </LinearLayout>

</LinearLayout>
