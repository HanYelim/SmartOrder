<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:weightSum="2"
    android:gravity="center"
    tools:context=".activity.RegisterFaceActivity">

    <LinearLayout

        android:orientation="vertical"
        android:layout_width="0dp"
        android:layout_weight="0.8"
        android:gravity="center"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="164dp"
            android:src="@drawable/logo" />


            <TextView
                    android:fontFamily="@font/gyeonggilight"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="사진을 촬영해 주세요."
                android:textSize="25sp"/>

            <Button             android:fontFamily="@font/gyeonggilight"
                android:id="@+id/camera_open_btn"
                android:background="#dda287"
                android:textColor="#ffffff"
                android:layout_width="150dp"
                android:layout_height="0dp"
                android:gravity="center"
                android:layout_weight="1"
                android:text="Camera"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1.2"
        android:layout_height="match_parent"
        android:background="@drawable/round"
        android:layout_marginRight="35dp"
        android:weightSum="6"
        android:orientation="vertical">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2.4"
            android:orientation="horizontal">


        </LinearLayout>
        <TextView
                    android:fontFamily="@font/gyeonggilight"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.6"
            android:gravity="center"
            android:id="@+id/check_photo"
            android:text="등록된 사진이 없습니다."
            android:layout_marginBottom="10dp"></TextView>
        <ImageView
            android:layout_gravity="center"
            android:id="@+id/testiv"
            android:layout_width="100dp"
            android:layout_height="100dp" />

        <EditText
            android:textSize="30sp"
            android:id="@+id/editpersonname"
            android:hint="닉네임을 입력해주세요"
            android:gravity="left"
            android:paddingLeft="50dp"
            android:layout_margin="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0"/>


        <Button             android:fontFamily="@font/gyeonggilight"
            android:layout_marginTop="10dp"
            android:id="@+id/add_person"
            android:background="#dda287"
            android:textColor="#ffff"
            android:text="add person"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.7"/>



    </LinearLayout>


</LinearLayout>
