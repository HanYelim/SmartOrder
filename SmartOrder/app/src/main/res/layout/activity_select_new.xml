<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#e8e6e5"
    android:orientation="horizontal">

    <LinearLayout
        android:tag="왼쪽"
        android:layout_width="0dp"
        android:layout_weight="3"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/layout1"
            android:orientation="vertical"
            android:visibility="visible"
            android:weightSum="11">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="5.2"
                android:background="@drawable/round"
                android:layout_margin="13dp"
                android:layout_marginBottom="5dp"
                android:orientation="vertical"
                android:weightSum="6">
                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_weight="1"
                    android:layout_height="0dp">

                <TextView
                    android:fontFamily="@font/gyeonggilight"
                    android:textColor="@color/colorBlack"
                    android:layout_marginTop="10dp"
                    android:gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:id="@+id/select_view_text"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="한예림 님을 위한 추천 메뉴"
                    android:textSize="17sp"
                    android:paddingLeft="20dp"/>
                    <TextView
                        android:fontFamily="@font/gyeonggilight"
                        android:textColor="@color/colorBlack"
                        android:layout_marginTop="10dp"
                        android:layout_marginRight="70dp"
                        android:gravity="center_vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/cou_text"
                        android:text="현재 쿠폰 개수: "
                        android:textSize="17sp"
                        android:paddingLeft="20dp"/>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="5"
                    android:orientation="horizontal"
                    android:weightSum="4">
                    <FrameLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical">

                            <ImageView
                                android:layout_marginTop="20dp"
                                android:layout_width="150dp"
                                android:layout_height="125dp"
                                android:src="@drawable/ice5"
                                android:id="@+id/favoriteImg"
                                android:layout_gravity="center"/>
                            <TextView
                                android:textColor="@color/colorBlack"

                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:textSize="16sp"
                                android:layout_gravity="center"
                                android:text="아무말"
                                android:gravity="center"
                                android:id="@+id/favoriteText"/>
                        </LinearLayout>
                        <ImageView
                            android:layout_gravity="right|top"
                            android:src="@drawable/crown"
                            android:layout_width="75dp"
                            android:layout_height="60dp" />
                    </FrameLayout>
                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_marginTop="20dp"
                            android:layout_width="150dp"
                            android:layout_height="125dp"
                            android:id="@+id/lastOrderImg1"/>
                        <TextView
                            android:fontFamily="@font/gyeonggilight"
                            android:textColor="@color/colorBlack"

                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:layout_gravity="center"
                            android:id="@+id/lastOrderText1"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_marginTop="20dp"
                            android:layout_width="150dp"
                            android:layout_height="125dp"
                            android:id="@+id/lastOrderImg2"/>
                        <TextView
                            android:fontFamily="@font/gyeonggilight"
                            android:textColor="@color/colorBlack"

                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textSize="16sp"
                            android:layout_gravity="center"
                            android:id="@+id/lastOrderText2"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:layout_height="match_parent"
                        android:orientation="vertical">
                        <ImageView
                            android:layout_marginTop="20dp"
                            android:layout_width="150dp"
                            android:layout_height="125dp"
                            android:id="@+id/lastOrderImg3"
                            android:layout_gravity="center"/>
                        <TextView
                            android:fontFamily="@font/gyeonggilight"
                            android:textColor="@color/colorBlack"

                            android:gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="15dp"
                            android:textSize="16sp"
                            android:layout_gravity="center"
                            android:id="@+id/lastOrderText3"/>
                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="4.5"
                android:background="@drawable/round"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp"
                android:weightSum="5"
                android:orientation="vertical">

                <TextView
                    android:fontFamily="@font/gyeonggilight"
                    android:textColor="@color/colorBlack"

                    android:gravity="center_vertical"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:paddingLeft="20dp"
                    android:text="오늘의 추천 메뉴"
                    android:textSize="17sp" />

                <GridView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="4"
                    android:id="@+id/re_menu_grid"
                    android:columnWidth="140dp"
                    android:horizontalSpacing="10dp"
                    android:verticalSpacing="10dp"
                    android:numColumns="auto_fit"
                    android:layout_gravity="center">

                </GridView>

            </LinearLayout>

            <Button
                android:textColor="#000000"
                android:fontFamily="@font/gyeonggilight"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1.3"
                android:layout_margin="13dp"
                android:text="전체 메뉴 보기"
                android:textSize="25sp"
                android:id="@+id/allMenu"
                android:background="@drawable/round_color_light"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            android:id="@+id/allMenu_layout"
            android:orientation="vertical"
            android:weightSum="10">


            <Button
                android:fontFamily="@font/gyeonggilight"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:textSize="23sp"
                android:background="@drawable/round_color_light"
                android:text="추천 메뉴 보기"
                android:layout_margin="13dp"
                android:id="@+id/lastMenu"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="9"
                android:background="@drawable/round"
                android:layout_marginBottom="13dp"
                android:layout_marginLeft="13dp"
                android:layout_marginRight="13dp">
                <GridView
                    android:background="@drawable/round"
                    android:id="@+id/gridView1"
                    android:layout_gravity="center"
                    android:paddingTop="30dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:columnWidth="140dp"
                    android:horizontalSpacing="10dp"
                    android:verticalSpacing="10dp"
                    android:numColumns="auto_fit" />
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="13dp"
        android:layout_marginBottom="13dp"
        android:layout_marginRight="13dp"
        android:background="@drawable/round"
        android:tag="오른쪽"
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:weightSum="10"
        android:orientation="vertical">

        <TextView
            android:fontFamily="@font/gyeonggilight"
            android:textColor="@color/colorBlack"
            android:layout_margin="10dp"
            android:gravity="center"
            android:text="주문 목록"
            android:textSize="18sp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <ListView
            android:layout_weight="7"
            android:id="@+id/listView"
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:scrollbars="vertical"></ListView>
        <LinearLayout
            android:background="#000000"
            android:layout_margin="3dp"
            android:layout_width="match_parent"
            android:layout_height="1dp"></LinearLayout>
        <LinearLayout
            android:layout_weight="3"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="0dp">
            <TextView
                android:fontFamily="@font/gyeonggilight"
                android:textColor="@color/colorBlack"
                android:textSize="18sp"
                android:id="@+id/txttotal"
                android:layout_margin="8dp"
                android:text="총 가격: "
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <Button
                android:textColor="#ffffff"
                android:textSize="19sp"
                android:layout_margin="10dp"
                android:background="@drawable/round_color"
                android:fontFamily="@font/gyeonggilight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/submit_btn"
                android:text="결제하기" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>