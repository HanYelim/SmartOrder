<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activity.OptionActivity"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_weight = "4"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:textSize="25sp"
            android:text="옵션을 선택해 주세요"
            android:layout_weight="1"/>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="수량"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"/>
            <ImageButton
                android:background="#00444444"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitXY"
                android:src="@drawable/btn_minus"
                android:id="@+id/count_minus"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="#afafaf"
                android:textSize="25sp"
                android:gravity="center"
                android:id="@+id/count"/>
            <ImageButton
                android:background="#00444444"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/btn_plus"
                android:scaleType="fitXY"
                android:id="@+id/count_plus"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="샷"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"/>
            <RadioGroup
                android:id="@+id/rdshot"
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <RadioButton
                    android:layout_marginRight="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textSize="30sp"
                    android:text="-1"
                    android:button="@null"
                    android:background="@drawable/opt_radio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:button="@null"
                    android:layout_marginRight="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textSize="30sp"
                    android:textColor="#ffffff"
                    android:text="0"
                    android:background="@drawable/opt_radio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:button="@null"
                    android:layout_marginRight="10dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textSize="30sp"
                    android:text="1"
                    android:background="@drawable/opt_radio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
                <RadioButton
                    android:button="@null"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:textSize="30sp"
                    android:text="2"
                    android:background="@drawable/opt_radio"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="샷"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"/>

            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="#afafaf"
                android:textSize="25sp"
                android:gravity="center"
                android:id="@+id/shot"/>
            <ImageButton
                android:background="#00444444"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/btn_plus"
                android:scaleType="fitXY"
                android:id="@+id/shot_plus"/>
            <ImageButton
                android:background="#00444444"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitXY"
                android:src="@drawable/btn_minus"
                android:id="@+id/shot_minus"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="시럽"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"/>
            <TextView
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:background="#afafaf"
                android:textSize="25sp"
                android:gravity="center"
                android:id="@+id/syrup"/>
            <ImageButton
                android:background="#00444444"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/btn_plus"
                android:scaleType="fitXY"
                android:id="@+id/syrup_plus"/>
            <ImageButton
                android:background="#00444444"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:scaleType="fitXY"
                android:src="@drawable/btn_minus"
                android:id="@+id/syrup_minus"/>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="얼음"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"/>
            <RadioGroup
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:id="@+id/ice_ice">
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="조금"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="보통"/>
                <RadioButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="많이"/>
            </RadioGroup>
        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:text="얼음"
                android:layout_marginRight="15dp"
                android:layout_marginLeft="15dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="없음"/>
            <Switch
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="25sp"
                android:checked="false"
                android:id="@+id/hot_ice"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="추가"/>
        </LinearLayout>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:textSize="25sp"
            android:id="@+id/menu"
            android:layout_gravity="center"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="#000000"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="5dp"></LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ListView
            android:id="@+id/listView"
            android:layout_width="wrap_content"
            android:layout_height="261dp"
            android:scrollbars="vertical"></ListView>


        <LinearLayout
            android:layout_margin="3dp"
            android:background="#000000"
            android:layout_width="match_parent"
            android:layout_height="1dp"></LinearLayout>
        <TextView
            android:textSize="18sp"
            android:id="@+id/txttotal"
            android:layout_margin="8dp"
            android:text="총 가격: "
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="결제하기" />


    </LinearLayout>


</LinearLayout>